
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List</h2>

<div class="card">
    <div class="card">
        <!-- /.card-header -->
        <div class="card-body">
            <input type="hidden" class="form-control" id="txtID" value="0">
            <div class="input-group mb-3">
                <input type="text" class="form-control" id="txtSubjName" placeholder="Subject Name" onblur="this.placeholder = 'Subject Name'" >
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-edit"></span>
                    </div>
                </div>
            </div>
            <div class="input-group mb-3">
                <input type="number" min="1" max="999" class="form-control" id="txtSubjItems" placeholder="No of Items">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-edit"></span>
                    </div>
                </div>
            </div>
            <div class="input-group mb-3">
                <input type="number" min="1" max="999" class="form-control" id="txtExamTimer" placeholder="Time Limit">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-edit"></span>
                    </div>
                </div>
            </div>
            <div class="input-group">
                <button id="btnSave" type="button" class="btn btn-success mr-2">Save</button>
                <button id="btnCancel" type="button" class="btn btn-danger d-none">Cancel</button>
            </div>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="dataTable" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Subject</th>
                    <th>Items</th>
                    <th>Time Limit</th>
                    <th>Created Date</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
            <tfoot>
                <tr>
                    <th>ID</th>
                    <th>Subject</th>
                    <th>Items</th>
                    <th>Time Limit</th>
                    <th>Created Date</th>
                    <th>Action</th>
                </tr>
            </tfoot>
        </table>
    </div>
    <!-- /.card-body -->
</div>

<script src="~/Scripts/Functions/ListValidation.js"></script>
<script src="~/Scripts/Functions/List.js"></script>